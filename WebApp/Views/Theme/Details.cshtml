@model WebApp.Models.ThemeViewModel;

@using Binit.Framework
@using Microsoft.Extensions.Localization

@using Lang = Binit.Framework.Localization.LocalizationConstants.WebApp.Views.Theme.Details
@inject IStringLocalizer<SharedResources> localizer

<ignite-input for-property="Name" disabled></ignite-input>
<ignite-textarea for-property="Color" disabled></ignite-textarea>
<ignite-input for-property="QuestionQuantity" disabled></ignite-input>


<button type="button" class="btn btn-secondary mr-2" 
        onclick="window.location.href='@Url.Action("Index","Theme")'">@(localizer[Lang.BtnBack])</button>